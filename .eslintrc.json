{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery"
	],
	"env": {
		"commonjs": true
	},
	"globals": {
		"mw": false,
		"Backbone": false,
		"_": false,
		"OO": false,
		"mediaWiki": false,
		"jQuery": false
	},
	"rules": {
		"max-len": "off",
		"no-jquery/no-global-selector": "off",
		"no-jquery/no-class-state": "off",
		"no-jquery/no-sizzle": "off",
		"no-jquery/variable-pattern": "off",
		"no-shadow": "warn",
		"no-unreachable-loop": "warn"
	}
}
