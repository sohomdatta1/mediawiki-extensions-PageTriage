<div id="mwe-pt-refresh-button-holder">
	<input type="checkbox" id="mwe-pt-autorefresh-checkbox"/>
	<label for="mwe-pt-autorefresh-checkbox">
		<%- mw.msg( 'pagetriage-auto-refresh-list' ) %>
	</label>
	<button id="mwe-pt-refresh-button"><%- mw.msg( 'pagetriage-refresh-list' ) %></button>
</div>
<% if ( !afcMode ) { %>
	<div class="mwe-pt-bottom-nav-stats">
		<div id="mwe-pt-unreviewed-stats">
			<% if ( ptrUnreviewedArticleCount ) { %>
				<%- mw.msg( 'pagetriage-unreviewed-article-count', ptrUnreviewedArticleCount, ptrUnreviewedRedirectCount, ptrOldest ) %>
			<% } %>
		</div>
		<div id="mwe-pt-reviewed-stats">
			<% if ( ptrReviewedArticleCount ) { %>
				<%- mw.msg( 'pagetriage-reviewed-article-count-past-week', ptrReviewedArticleCount, ptrReviewedRedirectCount ) %>
			<% } %>
		</div>
	</div>
<% } %>
